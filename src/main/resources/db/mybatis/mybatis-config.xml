<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <settings>
        <setting name="mapUnderscoreToCamelCase" value="true"/>
        <setting name="useGeneratedKeys" value="true"/>
    </settings>
    <typeAliases>
        <typeAlias type="com.westee.cake.generate.Goods" alias="Goods"/>
        <typeAlias type="com.westee.cake.data.OrderInfo" alias="OrderInfo"/>
        <typeAlias type="com.westee.cake.data.GoodsInfo" alias="GoodsInfo"/>
        <typeAlias type="com.westee.cake.generate.OrderTable" alias="OrderTable"/>
    </typeAliases>
    <mappers>
        <mapper resource="db/mybatis/UserMapper.xml"/>
        <mapper resource="db/mybatis/GoodsMapper.xml"/>
        <mapper resource="db/mybatis/GoodsTypesMapper.xml"/>
        <mapper resource="db/mybatis/RoleMapper.xml"/>
        <mapper resource="db/mybatis/ShopMapper.xml"/>
        <mapper resource="db/mybatis/GoodsImageMapper.xml"/>
        <mapper resource="db/mybatis/ShoppingCartMapper.xml"/>
        <mapper resource="db/mybatis/OrderGoodsMapper.xml"/>
        <mapper resource="db/mybatis/OrderTableMapper.xml"/>
        <mapper resource="db/mybatis/AddressMapper.xml"/>
        <mapper resource="db/mybatis/ChargeMapper.xml"/>
        <mapper resource="db/mybatis/DiscountMapper.xml"/>

        <mapper resource="db/mybatis/MyGoodsWithImageMapper.xml"/>
        <mapper resource="db/mybatis/ShoppingCartQuery.xml"/>
        <mapper resource="db/mybatis/MyOrderMapper.xml"/>
        <mapper resource="db/mybatis/MyGoodsMapper.xml"/>
        <mapper resource="db/mybatis/GoodsStockMapper.xml"/>
    </mappers>
</configuration>